<h1>{{artist.name}}</h1>

<h3>Bio</h3>
<p>{{artist.profile}}</p>

<h3>Members</h3>
<ul>
{{#each artist.members}}    
<li>{{this.name}}</li>
{{/each}}
</ul>

<h3>Links</h3>
<ul>
{{#each artist.urls}}    
<li>{{this}}</li>
{{/each}}
</ul>

<div>
{{#each albums}}

<div>
    
<a href="/album/{{../artist.name}}/{{id}}"><h3>{{title}}</h3></a>

<a href="/album/{{../artist.name}}/{{id}}"><img src="{{thumb}}" alt="Pic of album" height="100" width="100"></a> 

<a href="/album/{{../artist.name}}/{{id}}">Show Tracks</a>

<a href="/album/{{../artist.name}}/{{id}}">Add to collection</a>

</div>

{{/each}}
</div>
